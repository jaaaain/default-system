<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace=".mapper.RebirthReasonTableMapper">

    <!--查询单个-->
    <select id="queryById" resultType=".entity.RebirthReasonTable">
        select *
        from rebirth_reason_table
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryByLimit" resultType=".entity.RebirthReasonTable">
        select *
        from rebirth_reason_table
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="rebirthReason != null and rebirthReason != ''">
                and rebirth_reason = #{rebirthReason}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into rebirth_reason_table(rebirth_reason)
        values (#{rebirthReason})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into rebirth_reason_table(rebirth_reason)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.rebirthReason})
        </foreach>
    </insert>

    <insert id="UpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into rebirth_reason_table(rebirth_reason)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.rebirthReason})
        </foreach>
        on duplicate key update
rebirth_reason = values(rebirth_reason)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update rebirth_reason_table
        <set>
            <if test="rebirthReason != null and rebirthReason != ''">
                rebirth_reason = #{rebirthReason},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from rebirth_reason_table where id = #{id}
    </delete>

</mapper>

