<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace=".mapper.UserMapper">

    <!--查询单个-->
    <select id="queryById" resultType=".entity.User">
        select *
        from user
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryByLimit" resultType=".entity.User">
        select *
        from user
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="username != null and username != ''">
                and username = #{username}
            </if>
            <if test="password != null and password != ''">
                and password = #{password}
            </if>
            <if test="role != null">
                and role = #{role}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into user(usernamepasswordrole)
        values (#{username}#{password}#{role})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into user(usernamepasswordrole)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.username}#{entity.password}#{entity.role})
        </foreach>
    </insert>

    <insert id="UpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into user(usernamepasswordrole)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.username}#{entity.password}#{entity.role})
        </foreach>
        on duplicate key update
username = values(username)password = values(password)role = values(role)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update user
        <set>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="role != null">
                role = #{role},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from user where id = #{id}
    </delete>

</mapper>

